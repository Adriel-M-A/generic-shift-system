{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts",
    "src/shared/**/*"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/renderer/src/*"],
      "@core/*": ["src/renderer/src/modules/core/*"],
      "@auth/*": ["src/renderer/src/modules/auth/*"],
      "@shift/*": ["src/renderer/src/modules/shift/*"],
      "@customers/*": ["src/renderer/src/modules/customers/*"],
      "@ui/*": ["src/renderer/src/components/ui/*"],
      "@lib/*": ["src/renderer/src/lib/*"],
      "@config/*": ["src/renderer/src/config/*"]
    }
  }
}
